{
  "name": "simple-csv-parser",
  "version": "1.0.0",
  "author": "nolleh <nolleh7707@gmail.com>",
  "license": "MIT",
  "description": "csv string to javascript object",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm run clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "pnpm build",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:cov": "jest --coverage",
    "format": "prettier --write 'src/**/*.ts' *.md *.json"
  },
  "keywords": [
    "csv",
    "csv-parser",
    "simple-csv-parser",
    "marshal"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.(js,jsx,ts,md,json)": "pnpm format"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  }
}
